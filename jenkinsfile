pipeline{
    agent any
    stages{
        stage("Checkout-git"){
            steps{
                git url: 'https://github.com/gbelot2003/appbackend.git'
            }
        }
        stage("Creando entorno Doker"){
            steps{
                sh "docker-compose up -d"
            }
        }
        stage("Cerrando entorno Docker"){
            steps{
                sh "docker-compose down"
            }
        }
    }
    post{
        always{
            echo "========Done========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}